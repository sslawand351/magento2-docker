                comment="Fuel Surcharge Amount"/>
        <column xsi:type="decimal" name="base_fuel_surcharge_amount" scale="4" precision="12" unsigned="false" nullable="false" default="0"
                comment="Base Fuel Surcharge Amount"/>
    </table>
    <table name="sales_order">
        <column xsi:type="decimal" name="fuel_surcharge_amount" scale="4" precision="12" unsigned="false" nullable="false" default="0"
                comment="Fuel Surcharge Amount"/>
        <column xsi:type="decimal" name="base_fuel_surcharge_amount" scale="4" precision="12" unsigned="false" nullable="false" default="0"
                comment="Base Fuel Surcharge Amount"/>
    </table>
</schema>
