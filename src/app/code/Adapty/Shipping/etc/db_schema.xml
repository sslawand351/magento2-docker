<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="shipping_tablerate">
        <column xsi:type="decimal" name="fuel_surcharge" scale="4" precision="12" unsigned="false" nullable="false" default="0"
                comment="Fuel Surcharge"/>
    </table>
    <table name="quote">
        <column xsi:type="decimal" name="fuel_surcharge_amount" scale="4" precision="12" unsigned="false" nullable="false" default="0"
